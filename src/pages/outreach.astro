        <Image src={img31} alt={"Image 31"} class="gal-img" />
        <Image src={img32} alt={"Image 32"} class="gal-img" />
      </div>
      <div class="modal" id="ImageModal">
        <div class="modal-background modalclose"></div>
        <div class="modal-content is-flex is-flex-direction-row">
          <i
            class="fa-solid fa-caret-left fa-2x is-align-self-center"
            id="slider-left"
            style="z-index: 100; color: red"></i>
          <div class="image is-4by3 is-flex-grow-5">
            <img
              src="https://bulma.io/images/placeholders/1280x960.png"
              alt=""
              id="enlarged-image"
            />
          </div>
          <i
            class="fa-solid fa-caret-right fa-2x is-align-self-center"
            id="slider-right"
            style="z-index: 100; color: red"></i>
        </div>
        <button
          class="modal-close is-large modalclose"
          aria-label="close"
          id="modal-close"></button>
      </div>
    </div>
  </main>
</Base>
