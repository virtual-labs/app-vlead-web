<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-element-bundle.min.js"
></script>

<script>
  document.getElementById("outreach")!.classList.add("is-active");
  document.getElementById("outreach")!.classList.add("has-text-weight-bold");
</script>

<Base title="Outreach">
  <main style=" margin-bottom:2rem;">
    <p class="title has-text-white has-text-centered is-size-1 my-0 py-5">
      Outreach
    </p>

    <div
      class="tabs theme is-boxed is-toggle is-toggle-rounded is-centered is-large"
      style="overflow:visible;"
    >
      <ul>
        <li id="gal" class="is-active">
          <a class="white-black" href="#gallery" id="gallery">Gallery</a>
        </li>
        <li id="tabWorkshops">
          <div class="dropdown is-hoverable">
            <div class="dropdown-trigger link" id="w-trigger">
              <a class="white-black" aria-haspopup="true" aria-controls="dropdown-menu4" href="#workshops">
                <span id="markdown_display" data-category={data[0].url}
                  >Workshops</span
                >
              </a>
            </div>
            <div class="dropdown-menu" id="dropdown-menu4" role="menu">
              <div class="dropdown-content">
                {
                  data.map((c, i) => {
                    if (c.type == "markdown") {
                      return (
                        <div class="dropdown-item">
                          <a id="markdown_display" data-category={c.url} href={`#${c.fragment}`}>
                            {c.name}
                          </a>
                        </div>
                      );
                    }
                    return (
                      <div class="dropdown-item">
                        <a id="iframe" data-category={c.url} href={`#${c.fragment}`}>
                          {c.name}
                        </a>
                      </div>
                    );
                  })
                }
              </div>
            </div>
          </div>
        </li>
        <li id="tabNodalcenters">
          <div class="dropdown is-hoverable">
            <div class="dropdown-trigger link" id="w-trigger">
              <a class="white-black" aria-haspopup="true" href="#nodalCenters" aria-controls="dropdown-menu4">
                <span
                  id="markdown_display"
                  data-category={all.nodalcenters[0].url}>Nodal Centers</span
                >
              </a>
            </div>
            <div class="dropdown-menu" id="dropdown-menu4" role="menu">
              <div class="dropdown-content" style="">
                {
                  all.nodalcenters.map((c, i) => {
                    if (c.type == "markdown") {
                      return (
                        <div class="dropdown-item">
                          <a id="markdown_display" data-category={c.url} href={`#${c.fragment}`}>
                            {c.name}
                          </a>
                        </div>
                      );
                    }
                    return (
                      <div class="dropdown-item">
                        <a id="iframe" data-category={c.url} href={`#${c.fragment}`}>
                          {c.name}
                        </a>
                      </div>
                    );
                  })
                }
              </div>
            </div>
          </div>
        </li>
        <li id="faq"><a class="white-black" id="faq" href="#faq">FAQ</a></li>
        <li id="tm">
          <a class="white-black" 
            id="markdown_display"
            href="#testimonials"
            data-category={"https://raw.githubusercontent.com/virtual-labs/outreach-web-pages-iiith/main/testimonials/outreach-testimonials.md"}
          >
            Testimonials</a
          >
        </li>
        <li id="tabvideos">
          <div class="dropdown is-hoverable">
            <div class="dropdown-trigger link" id="w-trigger">
              <a class="white-black" aria-haspopup="true" href="#videos" aria-controls="dropdown-menu4">
                <span
                  id="markdown_display"
                  data-category={all.videos[0].url}>Videos</span
                >
              </a>
            </div>
            <div class="dropdown-menu" id="dropdown-menu4" role="menu">
              <div class="dropdown-content" style="">
                {
                  all.videos.map((c, i) => {
                    if (c.type == "markdown") {
                      return (
                        <div class="dropdown-item">
                          <a id="markdown_display" data-category={c.url} href={`#${c.fragment}`}>
                            {c.name}
                          </a>
                        </div>
                      );
                    }
                    return (
                      <div class="dropdown-item">
                        <a id="iframe" data-category={c.url} href={`#${c.fragment}`}>
                          {c.name}
                        </a>
                      </div>
                    );
                  })
                }
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>

    <div id="display-div" style="display: none">
      <OutreachContent client:only />
    </div>

    <div id="GAL" class="img_box gallery mt-6" style="display: block;">
      <div class="is-flex is-justify-content-center is-flex-wrap-wrap">
        <Image src={img1} alt={"Image 1"} class="gal-img" />
        <Image src={img2} alt={"Image 2"} class="gal-img" />
