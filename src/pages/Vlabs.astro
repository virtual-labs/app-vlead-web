---
import Base from "../layouts/Base.astro";
import "../css/vlead.css";
import VlabsContent from "../components/vlabs.jsx";
---

<Base title="About">
  <div class="py-3" style="color: white;">
    <p class="title has-text-white has-text-centered is-size-2 my-0 py-5">
      Virtual Labs
    </p>
    <div
      class="tabs theme is-boxed is-toggle is-toggle-rounded is-centered is-large"
    >
      <ul class="tablist">
        <li><a id="ovw" href="#ovw">Overview</a></li>
        <li><a id="obj" href="#obj">Goals and Philosophy</a></li>
        <li><a id="inst" href="#inst">Participating Institutes</a></li>
        <li><a id="testimonials" href="#testimonials">Testimonials</a></li>
        <li><a id="faq" href="#faq">FAQ</a></li>
      </ul>
    </div>
    <div
      id="display-div"
      style="padding: 1rem; display: flex; justify-content: center; align-items: center;"
    >
      <VlabsContent client:only />
    </div>
  </div>
</Base>
