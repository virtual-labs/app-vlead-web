---
import Base from "../layouts/Base.astro";
import "../css/theme.css";
import {
  People_Card_Component_Past,
  People_Card_Component_Current,
} from "../components/people_card";
import "@fortawesome/fontawesome-free/css/all.min.css";
// import Testimonials from "../components/testimonials";
import data from "../about_data.json";
import Timeline from "../components/timeline";
---

<script>
  document.getElementById("current-tab")!.addEventListener("click", () => {
    document.getElementById("current")!.style.display = "block";
    document.getElementById("current-tab")!.classList.add("is-active");

    document.getElementById("past")!.style.display = "none";
    document.getElementById("past-tab")!.classList.remove("is-active");
  });

  document.getElementById("past-tab")!.addEventListener("click", () => {
    document.getElementById("past")!.style.display = "block";
    document.getElementById("past-tab")!.classList.add("is-active");

    document.getElementById("current")!.style.display = "none";
    document.getElementById("current-tab")!.classList.remove("is-active");
  });

  const toggleButton = document.getElementById("toggleButton");
  const timelineContainer = document.getElementById("timelineContainer");

  toggleButton.addEventListener("click", function () {
    if (timelineContainer.classList.contains("hidden")) {
      timelineContainer.classList.remove("hidden");
      timelineContainer.classList.add("visible");
      toggleButton.textContent = "Hide Timeline";
    } else {
      timelineContainer.classList.remove("visible");
      timelineContainer.classList.add("hidden");
      toggleButton.textContent = "Show Timeline";
    }
  });
</script>

<style>
  link {
    color: var(--white);
  }
  link.dark {
    color: var(--black);
  }
  .testimonial {
    background-color: var(--light);
  }
  #past {
    display: none;
  }
  .tabs.is-toggle li.is-active a {
    background-color: white !important;
    border-color: white !important;
    color: black !important;
  }
  .tabs a {
    color: white !important;
  }
  .tabs a:hover {
    color: black !important;
    background-color: rgba(255, 255, 255, 0.584) !important;
  }
  .hidden {
    display: none;
  }
  .visible {
    display: flex;
    justify-content: center;
  }
  .timeline-toggle-btn {
    background-color: #0D9276;
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 1rem;
    font-weight: bold;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  .timeline-toggle-btn:hover {
    background-color: #0B7B5F;
  }
</style>

<Base title="About">
  <div class="py-3" style="color: white;">
    <div style="background-color: #0D9276; padding: 2rem; margin-top: -25px">
      <h1 style="font-size: 2.5rem;">
        <strong style="color: white;">VLEAD</strong>
      </h1>
      <h1 style="font-size: 1.5rem;">
        <strong style="color: white;">{data.vlead.description}</strong>
      </h1>
      <br />
      {data.vlead.content}
    </div>
    <div class="has-text-centered my-4">
      <button id="toggleButton" class="timeline-toggle-btn">
        Show Timeline
      </button>
    </div>
    <div id="timelineContainer" class="hidden">
      <Timeline />
    </div>
    <div style="background-color: #0D9276; padding: 2rem;">
      <div class="column is-auto mb-4" id="cards">
        <div>
          <div class="tabs is-toggle-rounded is-toggle is-large is-centered">
            <ul>
              <li
                class="link is-active has-text-weight-medium"
                id="current-tab"
              >
                <a>Current</a>
              </li>
              <li class="link has-text-weight-medium" id="past-tab">
                <a>Past</a>
              </li>
            </ul>
          </div>
          <div id="current" style="color : black!important">
            <People_Card_Component_Current client:only />
          </div>
          <div id="past" style="color : black!important">
            <People_Card_Component_Past client:only />
          </div>
        </div>
      </div>
    </div>
  </div>
</Base>