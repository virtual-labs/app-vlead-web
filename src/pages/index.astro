    display: flex;
    padding: 5%;
    padding-top: 0%;
    justify-content: center;
    align-items: center;
    padding-top: 2%;
    padding-bottom: 2%;
  }
  .text {
    color: var(--dark);
  }
  .text.dark {
    color: var(--white);
  }
  .heading-center {
    font-family: Georgia, "Times New Roman", Times, serif;
    font-weight: bold;
    font-size: 250%;
    text-align: center;
    margin-top: 1%;
    margin-bottom: 0%;
  }
  .about-text {
    font-family: Georgia, "Times New Roman", Times, serif;
    font-size: 19px;
    margin: 0%;
  }
  .link-card-grid {
    margin-left: 5rem;
    margin-right: 5rem;
    margin-top: 1%;
