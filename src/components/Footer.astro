---
import all from "../footer_data.json";
import '@fortawesome/fontawesome-free/css/all.min.css'; // Ensuring the fontawesome import
---

<!-- <hr class="mb-1" /> -->
<div class="footer-class has-text-white has-background-black">
  <div class="columns is-mobile">
    <div class="column px-5">
      <p class="is-size-4 has-text-centered py-0">Address</p>
      <hr class="my-1 m-auto" style="width: 75%;" />
      <p class="is-size-6 py-3 has-text-centered">
        {all.address}
      </p>
    </div>
    <div class="column px-5">
      <p class="is-size-4 has-text-centered py-0">Contact</p>
      <hr class="my-1 m-auto" style="width: 75%;" />
      <p class="is-size-6 py-3 has-text-centered">
        General Information : {all.contact.General_Information}<br />
        Development/Outreach : {all.contact.DevelopmentandOutreach}<br />
        Email: {all.contact.Email}
      </p>
    </div>
    <div class="column px-5">
      <p class="is-size-4 has-text-centered py-0">Follow Us</p>
      <hr class="my-1 m-auto" style="width: 75%;" />
      <div class="is-flex is-justify-content-space-evenly py-5">
        {
          all.Follow.map((item) => {
            const backgroundColors = {
              twitter: '#55acee',
              facebook: '#3b5998',
              youtube: '#e52d27',
              linkedin: '#2867B2',
              instagram: '#E1306C'
            };
            return (
              <a class="social-icon" style={{ background: backgroundColors[item.social.toLowerCase()] }} href={item.link}>
                <i class={`fab fa-${item.social.toLowerCase()} fa-lg`}></i> <!-- Adjusted size using Font Awesome size class -->
              </a>
            );
          })
        }
      </div>
    </div>
  </div>
 <div class="columns is-mobile">
    <div class="column is-full text-center" style="font-family: 'Open Sans', sans-serif; background:#212121;">      
      <p class="is-size-6 has-text-centered">      
        <a class="text-primary font-weight-bold" href="https://www.gnu.org/licenses/agpl-3.0.en.html"> AGPL 3.0 </a>
        &nbsp;&amp;&nbsp;
        <a class="text-primary font-weight-bold" href="https://creativecommons.org/licenses/by-nc-sa/4.0/"> Creative Commons (CC BY-NC-SA 4.0) </a>
      </p>      
    </div>
  </div>
</div>
<style>
  h3 {
    margin-bottom: 0%;
  }
  .footer {
    /* background-color: ; */
    /* background-color: rgb(35, 4, 52); */
    padding-left: 2rem;
    padding-right: 2rem;
    /* width: 100%; */
  }
  .footer-heading {
    width: 100%;
  }
  .row {
    text-align: center;
  }
  .footer-class {
    background-color: var(--footer);
    color: var(--white);
    /* margin: 0rem; */
  }
  .social-icon {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    color: white;
    text-decoration: none;
  }
  .social-icon i {
    color: white;
  }
</style>
